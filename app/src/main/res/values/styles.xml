<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextView.Settings" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">@dimen/menu_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingEnd">@dimen/end_padding</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="SwitchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_height</item>
        <item name="android:layout_gravity">center|start</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:colorControlActivated">@color/blue</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
    </style>
    <style name="MainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:paddingHorizontal">@dimen/base_padding</item>
        <item name="android:layout_marginBottom">@dimen/base_padding</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
</resources>