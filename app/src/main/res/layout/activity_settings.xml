<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/secondaryBackground"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSettings"
        android:layout_height="56dp"
        android:layout_width="match_parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="@string/settings"
        app:titleTextColor="@color/secondaryColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/base_padding"
        tools:ignore="RtlSymmetry">

        <Switch
            android:id="@+id/switchTheme"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_height"
            android:paddingEnd="6dp"
            android:gravity="center|start"
            android:textSize="@dimen/menu_text_size"
            android:text="@string/dark_theme"
            android:fontFamily="@font/ys_display_medium"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Button
            android:id="@+id/textShare"
            style="@style/TextView.Settings"
            android:text="@string/share"
            app:drawableEndCompat="@drawable/ic_share" />

        <Button
            android:id="@+id/textSupport"
            style="@style/TextView.Settings"
            android:text="@string/support"
            app:drawableEndCompat="@drawable/ic_support" />

        <Button
            android:id="@+id/textTerms"
            style="@style/TextView.Settings"
            android:text="@string/terms"
            app:drawableEndCompat="@drawable/ic_arrow_forward" />
    </LinearLayout>
</LinearLayout>